<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Animated Homepage</title>
    <style>
       


        /* Basic Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .welcome-container {
            text-align: center;
        }

        .welcome-text {
            font-size: 3em;
            animation: fadeIn 2s ease-in-out, moveUp 2s ease-in-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @keyframes moveUp {
            from {
                transform: translateY(20px);
            }

            to {
                transform: translateY(0);
            }
        }

        body {
            font-family: 'Arial', sans-serif;
            line-height: 1.6;
            color: #333;
        }

        /* Header Styles */
        .header {
            background: #333;
            color: #fff;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
        }

        .logo {
            font-size: 24px;
            text-decoration: none;
            color: #fff;
        }

        .nav-items a {
            margin-right: 20px;
            color: #fff;
            text-decoration: none;
        }

        .nav-items a:hover {
            color: #f0a500;
        }

        /* Hero Section Styles */
        .hero {
            height: 100vh;
            background: url('hero-bg.jpg') no-repeat center center/cover;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: #fff;
        }

        .hero-title {
            font-size: 48px;
            animation: fadeInDown 1s ease-in-out;
        }

        .hero-subtitle {
            font-size: 24px;
            margin-top: 10px;
            animation: fadeInUp 1s ease-in-out;
        }

        .btn {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background: #f0a500;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            animation: fadeInUp 1.5s ease-in-out;
        }

        .btn:hover {
            background: #e08900;
        }

        /* About Section Styles */
        .about,
        .projects,
        .contact {
            padding: 60px 20px;
            text-align: center;
        }

        .about h2,
        .projects h2,
        .contact h2 {
            font-size: 36px;
            margin-bottom: 20px;
        }

        /* Keyframes for Animations */
        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>
    <!-- Header Section -->
    <header class="header">
        <a href="#" class="logo">MyPortfolio</a>
        <h1 class="welcome-text">welcome {{uname}}</h1>
        <nav class="nav-items">
            <a href="#home">Home</a>
            <a href="#about">About</a>
            <a href="#projects">Projects</a>
            <a href="#contact">Contact</a>
        </nav>
    </header>

    <!-- Hero Section -->
    <section id="home" class="hero">
        <div class="hero-content">
            <h1 class="hero-title">Welcome to My Portfolio</h1>
            <p class="hero-subtitle">I am a passionate web developer</p>
            <a href="#about" class="btn">Learn More</a>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="about">
        <h2>About Me</h2>
        <p>I am a web developer with a passion for creating beautiful and functional websites.</p>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="projects">
        <h2>My Projects</h2>
        <!-- Add your project details here -->
    </section>

    <!-- Contact Section -->
    <section id="contact" class="contact">
        <h2>Contact Me</h2>
        <p>Feel free to reach out for collaborations or just a friendly chat.</p>
    </section>

    <!-- Footer Section -->
    <footer>
        <p>
        
        </p>
    </footer>

